<% include ../partials/header %>

<% if(currentUser && currentUser.isAdmin) { %>
<h1><i class="glyphicon glyphicon-star-empty"></i> = Admin</h1>
<% } %>
<header class="jumbotron">
  <div class="container">
    <h1>Kampgrounds <i class="glyphicon glyphicon-tent"></i></h1>
    <p>Come here to Kamp!</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </p>
  </div>
</header>

<div class="row text-center">
  <% campgrounds.forEach((campground)=> { %>
  <div class="col-md-3 col-sm-6">
    <div class="thumbnail card">
      <img src="<%= campground.image %>">
      <div class="caption">
        <h4>
          <%= campground.name %>
        </h4>
        <% if (campground.rating === 0) { %>
        <em>No reviews yet.</em>
        <% } else { %>
        <span class="fas fa-star far fa-star"></span>
        <span class="far fa-star <% if (campground.rating > 1.5) { %> fas fa-star <% } %>"></span>
        <span class="far fa-star <% if (campground.rating > 2.5) { %> fas fa-star <% } %>"></span>
        <span class="far fa-star <% if (campground.rating > 3.5) { %> fas fa-star <% } %>"></span>
        <span class="far fa-star <% if (campground.rating > 4.5) { %> fas fa-star <% } %>"></span>
        <% } %>
      </div>
      <p>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
      </p>
    </div>
  </div>
  <% }) %>
</div>

<% include ../partials/footer %>